<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}UEL222{% endblock %}</title>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    {# CSS #}
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
</head>

<body>

{# ====== Menu du site ====== #}
{% set menu = [
    { label: 'Accueil', route: 'blog' },
    { label: 'Articles', route: 'article_index' },
    { label: 'Nouvel article', route: 'article_new' },
    { label: 'Catégories', route: 'category_index' },
    { label: 'Nouvelle catégorie', route: 'category_new' }
] %}


{# ====== Navbar ====== #}
<nav class="navbar navbar-dark navbar-custom mb-4">
    <div class="container d-flex justify-content-between">

        {# Titre #}
        <a class="navbar-brand" href="{{ path('blog') }}">
            Projet - UEL222
        </a>

        {# Liens du menu #}
        <ul class="navbar-nav flex-row gap-3">

            {% set currentRoute = app.request.attributes.get('_route') %}

            {% for item in menu %}
                <li class="nav-item">
                    <a class="nav-link {% if currentRoute == item.route %}active{% endif %}"
                       href="{{ path(item.route) }}">
                        {{ item.label }}
                    </a>
                </li>
            {% endfor %}

        </ul>
    </div>
</nav>


{# ====== Contenu ====== #}
<div class="container">
    {% block body %}{% endblock %}
</div>

</body>
</html>

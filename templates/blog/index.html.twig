{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

  {# ====== Titre + infos + boutons ====== #}
  <div class="d-flex justify-content-between align-items-center mb-4">

    <div>
      <h1 class="h3 mb-1">Accueil</h1>

      {# nombre total d'articles #}
      <p class="text-muted mb-0">{{ total }} article(s) au total.</p>
    </div>

    <div class="d-flex gap-2">
      {# Bouton pour créer un nouvel article #}
      <a class="btn btn-primary" href="{{ path('article_new') }}">
        + Ajouter un article
      </a>

      {# Bouton pour aller sur la page des catégories #}
      <a class="btn btn-outline-secondary" href="{{ path('category_index') }}">
        Catégories
      </a>
    </div>

  </div>


  {# ====== Si aucun article ====== #}
  {% if articles|length == 0 %}
    <div class="alert alert-warning">
      Aucun article pour le moment.
    </div>

  {# ====== Sinon on affiche la liste ====== #}
  {% else %}

    <div class="row g-3">
      {% for article in articles %}
        <div class="col-12 col-md-6 col-lg-4">

          <div class="card h-100 shadow-sm">
            <div class="card-body">

              <h5 class="card-title">{{ article.title }}</h5>

              {# Extrait de 100 caractères #}
              <p class="card-text text-muted">
                {{ article.content|slice(0, 100) }}...
              </p>

              <div class="d-flex gap-2">
                <a class="btn btn-sm btn-outline-primary"
                   href="{{ path('article_show', {id: article.id}) }}">
                  Lire
                </a>

                <a class="btn btn-sm btn-outline-secondary"
                   href="{{ path('article_edit', {id: article.id}) }}">
                  Modifier
                </a>
              </div>

            </div>
          </div>

        </div>
      {% endfor %}
    </div>


    {# ====== Pagination si + de 6 articles====== #}
    {% if pages > 1 %}
      <nav class="mt-4">
        <ul class="pagination justify-content-center">

          {# Précédent : désactivé si on est sur la page 1 #}
          <li class="page-item {% if page <= 1 %}disabled{% endif %}">
            <a class="page-link" href="{{ path('blog', {page: page - 1}) }}">
              Précédent
            </a>
          </li>

          {# Affiche les numéros de page #}
          {% for p in 1..pages %}
            <li class="page-item {% if p == page %}active{% endif %}">
              <a class="page-link" href="{{ path('blog', {page: p}) }}">
                {{ p }}
              </a>
            </li>
          {% endfor %}

          {# Suivant : désactivé si on est sur la dernière page #}
          <li class="page-item {% if page >= pages %}disabled{% endif %}">
            <a class="page-link" href="{{ path('blog', {page: page + 1}) }}">
              Suivant
            </a>
          </li>

        </ul>
      </nav>
    {% endif %}

  {% endif %}
{% endblock %}
